{
  "name": "wizard-game-server",
  "version": "1.0.0",
  "description": "Backend server for Wizard Game - A multiplayer Harry Potter inspired game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node scripts/seedDatabase.js",
    "migrate": "node scripts/migrate.js",
    "logs": "tail -f logs/server.log"
  },
  "keywords": [
    "wizard",
    "game",
    "multiplayer",
    "harry-potter",
    "nodejs",
    "express",
    "socketio",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "socket.io": "^4.6.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "mongodb-memory-server": "^9.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "routes/**/*.js",
      "controllers/**/*.js",
      "models/**/*.js",
      "utils/**/*.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/**",
      "tests/**",
      "logs/**"
    ],
    "delay": "1000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/wizard-game-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/wizard-game-server/issues"
  },
  "homepage": "https://github.com/yourusername/wizard-game-server#readme"
}